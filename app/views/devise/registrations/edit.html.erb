<% content_for :title, t('.headline') %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true}) do |f| %>
  <%= devise_error_messages! %>
  <p><%= f.label t('user.email') %></p>
  <p><%= f.email_field :email %>*</p>

  <div><%= f.label t('user.firstname') %><br />
  <%= f.text_field :firstname %>*</div>
  
  <div><%= f.label t('user.lastname') %><br />
  <%= f.text_field :lastname %>*</div>

  <div><%= f.label t('user.alias') %><br />
  <%= f.text_field :alias %></div>
	</br>
  <div><%= f.label t('user.password') %> <i> <%= t('.reference1') %></i><br />
  <%= f.password_field :password %></div>

  <div><%= f.label t('user.password_confirm') %><br />
  <%= f.password_field :password_confirmation %></div>
	<br />
  <div><%= f.label t('.password_current') %> <i> <%= t('.reference2') %> </i><br />
  <%= f.password_field :current_password %>*</div>

	<%= f.label t('.upload_photo') %>
	<%= f.file_field :photo%>

  <div><%= f.submit t('.submit_form') %></div>
<% end %>

<br />
<%= link_to t('.cancel'), :back %>
<br />
<p><%= link_to t('.delete_account'), registration_path(resource_name), :confirm => t('.confirm_changes'), :method => :delete %></p>
