<% content_for :title, t('.headline') %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true}) do |f| %>
  <%= devise_error_messages! %>
      <div id="edituserfield">
            <%= f.label t('user.email') %>
            <br/>
            <%= f.email_field :email %>*
      </div>
      <div id="edituserfield">
            <%= f.label t('user.firstname') %>
            <br />
            <%= f.text_field :firstname %>*
      </div>
      <div id="edituserfield">
            <%= f.label t('user.lastname') %>
            <br />
            <%= f.text_field :lastname %>*
      </div>
      <div id="edituserfield">
            <%= f.label t('user.alias') %>
            <br />
            <%= f.text_field :alias %>
      </div>
      <div id="edituserfield">
            <%= f.label t('user.password') %> <span id="reference"><%= t('.reference1') %></span>
            <br />
            <%= f.password_field :password %>
      </div>
      <div id="edituserfield">
            <%= f.label t('user.password_confirm') %>
            <br />
            <%= f.password_field :password_confirmation %>
      </div>
      <div id="edituserfield">
            <%= f.label t('.password_current') %> <span id="reference"> <%= t('.reference2') %> </span>
            <br />
            <%= f.password_field :current_password %>*
      </div>
      <div id="edituserfield">
            <%= f.label t('.upload_photo') %><br/>
            <%= f.file_field :photo%>
      </div>

  <div id="submit"><%= f.submit t('.submit_form') %></div>
<% end %>
<div id="otheroptions">
    <table>
        <tr>
            <td>
                <%= link_to t('.cancel'), :back %>
            </td>
            <td>        
                <%= link_to t('.delete_account'), registration_path(resource_name), :confirm => t('.confirm_changes'), :method => :delete %>
            </td>
        </tr>
    </table>
</div>