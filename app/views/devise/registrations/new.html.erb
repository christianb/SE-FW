<% content_for :title, t('.headline') %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label t('user.email') %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label t('user.firstname') %><br />
  <%= f.text_field :firstname %></div>
  
  <div><%= f.label t('user.lastname') %><br />
  <%= f.text_field :lastname %></div>

  <div><%= f.label t('user.alias') %><br />
  <%= f.text_field :alias %></div>
	</br>
  <div><%= f.label t('user.password') %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label t('user.password_confirm') %><br />
  <%= f.password_field :password_confirmation %></div>
	
  <div><%= f.submit t('.sign_up') %></div>
<% end %>


