<% content_for :title, t('.headline') %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="clearfix">
    <%= f.label t('user.email') %>
    <div class="input">
        <%= f.email_field :email %>*
    </div>
  </div>

  <div class="clearfix">
    <%= f.label t('user.firstname') %>
    <div class="input">
       <%= f.text_field :firstname %>*
    </div>
  </div>
  
  <div class="clearfix">
      <%= f.label t('user.lastname') %>
      <div class="input">
        <%= f.text_field :lastname %>*
      </div>
  </div>

  <div class="clearfix">
      <%= f.label t('user.alias') %>
      <div class="input">
        <%= f.text_field :alias %>
      </div>
  </div>
	
  <div class="clearfix">
      <%= f.label t('user.password') %>
      <div class="input">
        <%= f.password_field :password %>*
      </div>
  </div>

  <div class="clearfix">
      <%= f.label t('user.password_confirm') %>
      <div class="input">
        <%= f.password_field :password_confirmation %>*
      </div>
  </div>
	
  <div class="clearfix">
    <div class="actions"> 
        <%= f.submit t('.sign_up'), :class => "btn success" %>
    </div>
  </div>
<% end %>

