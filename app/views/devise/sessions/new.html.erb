<% content_for :title, t('.sign_in') %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.email_field :email %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
        <%= f.password_field :password %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="clearfix">
         
    <div class="input">
        <%= f.label :remember_me, :class =>"label_remember" %><%= f.check_box :remember_me %>
    </div>
  </div>
  <% end -%>

  <div class="clearfix">
    <div class="input">
        <%= f.submit "Sign in" %>
    </div>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>