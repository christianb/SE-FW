<% content_for :title, "Fehler beim Login" %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.email_field :email %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
        <%= f.password_field :password %>
    </div>
  </div>

  <div class="clearfix">
    <div class="input">
        <%= f.submit "Login" %>
    </div>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>