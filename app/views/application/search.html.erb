<% content_for :title, "Suchergebniss" %>
	
<% if !@cds.empty? %>
	<h3>Gefundene CDs</h3>
	<p><%= flash[:alert] %></p>

	<div style="padding-left:20px;">
	<%= will_paginate @cds %>
	</div>
	<div style="height:494px;">
	<ol id="selectable">
		<% @cds.each do |c| %>
		<% if c.visible == true %>
		<li>
			<!--<%= image_tag c.photo.url(:normal) %>-->
			<%= link_to (image_tag c.photo.url(:normal)), compact_disk_path(c), :rel=>"popover", :title=>c.title+" ("+c.artist+")", :id=>getSongs(c)%>
			<p class="blackFont"><%= c.artist %></p>
			<p><%= c.title %></p>
			<p>
				<!--<%= link_to 'Show', compact_disk_path(c) %>-->
				
				<% if user_signed_in? %>
					<%= link_to 'Tauschen', swap_cd_path(c.id) %>
				<% end %>
			</p>
		</li>
		<% end %>
		<% end %>
	</ol>
	</div>
	<div style="padding-left:20px;">
	<%= will_paginate @cds %>
	</div>
<% end %>

<% if !@users.empty? %>
<h3>Gefundene User</h3>
