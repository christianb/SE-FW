<div class="row">
<div class="clearfix">
		<%= form.label "Titel" %>
        <div class="input">
            <%= form.text_field :title, :class => "span6" %>*
        </div>
</div>
	

	<div class="clearfix">
		<%= form.label "Artist" %>
        <div class="input">
            <%= form.text_field :artist, :class => "span6" %>* 
                <span class="span6 offset10"style="float:right; padding-right:30px;">
                    <%= link_to_function 'MusicBrainz Abfrage', 'mbrainz()', :class => "btn mbrainzBt" %>
                    <%= image_tag ("information-white.png"), :class=>"information_symbol", :rel=>"popover", :title => 'MusicBrainz', :id => "Wenn Sie einen Titel und Interpreten einer CD eingegeben haben, koennen Sie mittels MusicBrainz, einer Open Music Enzyklopaedie, weitere Daten (z.B Songs oder Cover) automatisch fuellen lassen."  %>
                </span>
		</div>
    </div>
    
</div>
<div class="row">
	<div class="clearfix">
		<%= form.label "Genre" %>
    <div class="input">
			<%= form.text_field :genre, :class => "span6" %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= form.label "Erscheinungsjahr" %>
    <div class="input">
			<%= form.text_field :year, :placeholder => '1992', :class => "span6" %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= form.label "Beschreibung" %>
    	<div class="input">
			<%= form.text_area :description, :placeholder => 'Ihre Beschreibung der CD', :class => "span6", :rows => 5 %>
		</div>
	</div>
	
	<%= form.hidden_field :user_id, :value => current_user.id %>
	<%= form.hidden_field :visible, :value => true %>

