	<div class="clearfix song_fields">
		<%= form.label "Songs"%>
		<%= form.fields_for :songs do |builder| %>
			<%= render 'song_partial', :f => builder %>
		<% end %>
		<div class="mbrainz_fields"></div>
		<div class="input">
			<%= link_to_add_fields '<span class="label success"> + </span>'.html_safe, form, :songs %>
		</div>
	</div>
		
	<div class="clearfix">
    	<%= form.label t('.upload_cover') %>
        <div class="input">
        	<%= form.file_field :photo, :class => "input-file" %> <span style=" margin-left:55px;  color: #808080;" class="small">max. 5 MB</span>
        </div>
  </div>

	<div class="clearfix">
        <%= form.label 'Cover URL' %>
        <div class="input">
					 <%= form.text_field :photo_url %>
					<span class="span6 offset10">
	            <%= image_tag ("information-white.png"), :class=>"information_symbol", :rel=>"popover", :title => 'URL', :id => "Sollte die URL auf kein Bild verweisen wird das Standard Bild verwendet."  %>
	        </span>
        </div>
				
  </div>

	<div class="clearfix">
    	<%= form.label t('.demo_song') %>
        <div class="input">
        	<%= form.file_field :audio, :class => "input-file" %>  <span style=" margin-left:55px;  color: #808080;" class="small">max. 5 MB</span>
        </div>
  </div>
</div>
