<% content_for :title, "Alle CDs" %>

<p><%= flash[:alert] %></p>

<%
=begin %>
	<% if can?(:show, c) && user_signed_in? %>
		<%= link_to 'Show', c %>
	<% end %>
	<% if can?(:manage, c) && user_signed_in?%>
		<%= link_to 'Destroy', c, :confirm => 'Are you sure?', :method => :delete %>
	<% end %>
<%

<table class="zebra-striped">
	<tr>
		<th></th>
		<th>Interpret</th>
		<th>Titel</th>
		<th></th>
	</tr>
<% @cds.each do |c| %>
	<tr>
			<td><%= image_tag c.photo.url(:normal) %></td>
			<td><%= c.artist %></td>
			<td><%= c.title %></td>
				<!-- <%= link_to 'Edit', edit_compact_disk_path(c) %> -->
			<td><%= link_to 'Show', compact_disk_path(c) %></td>
	</tr>
<% end %>
</table>
<br>
<br>
