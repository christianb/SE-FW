	<%= image_tag @cd.photo.url(:normal) %>
	<% if current_user.id != @cd.user_id %>
		<p>
			<b>Besitzer:</b>
			<%= link_to @user.firstname + ' ' + @user.lastname, allUserCDs_path(@cd.user_id) %>
		</p>
	<% end %>
	<p>
		<b>Artist:</b>
		<%= @cd.artist %>
	</p>
	<p>
		<b>Title:</b>
		<%= @cd.title %>
	</p>
	<p>
		<b>Genre:</b>
		<%= @cd.genre %>
	</p>
	<p>
		<b>Erscheinungsjahr:</b>
		<%= @cd.year %>
	</p>
	
	<p>
		<b>Beschreibung:</b>
		<%= @cd.description %>
	</p>
	
