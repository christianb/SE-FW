<%= will_paginate @cds %>
<table class="bordered-table zebra-striped" style="margin-left:20px; width: 98% !important;">
    <colgroup>
    <col width="60"> <!-- Bild-->
    <col width="auto"> <!-- Artist -->
    <col width="auto"> <!-- Interpret-->
    <col width="auto"> <!-- Genre-->
    <col width="auto"> <!-- Beschreibung-->
    <col width="auto"> <!-- Löschen -->
    </colgroup>
<thead>
<tr>
    <th>Bild</th>
    <th>Artist</th>
    <th>Interpret</th>
    <th> Genre</th>
    <th> Beschreibung</th>
    <th> Löschen </th>
</tr>
</thead>
<tbody>
<% @cds.each do |cd| %>
<tr>
    	<td><%= image_tag cd.photo.url(:small) %></td>
		<td><%= cd.title %></td>
		<td><%= cd.artist %></td>
    	<td><%= cd.genre %></td>
    	<td><%= cd.description %></td>
    	<td><%= link_to (image_tag("cross-script.png")), delete_cd_path(cd.id), :method => :delete, :confirm => "Sind Sie sicher?" %> <br></td>
    <!--<td><%= image_tag("cross-script.png")%></td>-->
</tr>
<% end %>
</tbody>
</table>
<%= will_paginate @cds %>